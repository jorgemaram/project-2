<div class="container px-4 py-5 mx-auto ">

        <div class="d-flex flex-lg-row flex-column-reverse card-login">
            <div class="card card1 new-product">

                <div class="row justify-content-center my-auto">              
                    <div class="col-md-8 col-10 my-5">


                        <h5 class="msg-info text-center">Crear nuevo producto</h5>

                        <form action="/productos/nuevo" method="POST" enctype="multipart/form-data">

                            <!-- Title -->
                            <div class="form-group">
                                <label for="title-input" class="form-control-label text-muted">Título</label>
                                <input name="title" type="text" class="form-control" id="title-input">
                            </div>

                            <!-- Date -->
                            <div class="form-group">
                                <label for="date" class="form-control-label text-muted">Fecha de creación</label>
                                <input name="date" type="date" class="form-control" id="date">
                            </div>

                            <!-- Description -->
                            <div class="form-group">
                                <label for="description" class="form-control-label text-muted">Descripción</label>
                                <textarea name="description" class="form-control" id="description" rows="3"></textarea>
                            </div>

                            <!-- Upload image -->
                            <div class="form-group">
                                <div class="custom-file">
                                    <input name="imageFile" type="file" class="custom-file-input" id="imageFile">
                                    <label class="custom-file-label form-control-label text-muted" for="image">Subir imagen</label>
                                </div>
                            </div>       

                            <!--------------- Login, sign up, error button --------------->
                            <button type="submit" class="btn-block btn-color">Crear</button>                         

                            <a href="/usuario" class="btn btn-white-product form-control">Volver atrás</a>                     
                        
                            {{!-- {{#if errorMsg}}
                            <p class="btn btn-red form-control">{{errorMsg}}</p>
                            {{/if}} --}}
                        </form>

                    </div>
                  </div> 

            </div>   
        </div> 

</div>
