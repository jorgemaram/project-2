<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Incluye tu nuevo producto</h1>
            <hr>
            <form action="/products/new" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title-input">Título del producto</label>
                    <input name="title" type="text" class="form-control" id="title-input">
                </div>
                <div class="form-group">
                    <label for="date">Fecha de creación</label>
                    <input name="date" type="date" class="form-control" id="date">
                </div>
                <div class="form-group">
                    <label for="description">Descripción del producto</label>
                    <textarea name="description" class="form-control" id="description" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <div class="custom-file">
                    <input name="imageFile" type="file" class="custom-file-input" id="imageFile">
                    <label class="custom-file-label" for="image">Seleccionar imagen del producto</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-dark">Enviar</button>
                <a href="/products" class="btn btn-dark">Volver atrás</a>

            </form>
        </div>

    </div>
</div>