<div class="container">

    <div class="row">

        <div class="col-md-6">
            <h1 style="font-weight: 100">Editar perfil</h1>
        </div>

        <div class="col-md-6">

            <form action="/user/edit?id={{user.id}}" method="POST">
                <div class="form-group">
                    <label for="name-input">Nombre</label>
                    <input name="name" type="text" class="form-control" id="name-input" value="{{name}}">
                </div>
                <div class="form-group">
                    <label for="username">Nombre de usuario</label>
                    <input name="username" type="text" class="form-control" id="username" value="{{username}}">
                </div>
                <div class='form-group'>
                    <label for='password'>Contraseña</label>
                    <input name='password' type='password' class='form-control' id='password' value="{{password}}">                    
                </div>
                <div class='form-group'>
                    <label for='birthday'>Fecha de nacimiento</label>
                    <input name='birthday' type='date' class='form-control' id='birthday' value="{{birthday}}">
                </div>
                <div class="form-group">
                    <label for="description">Descripción</label>
                    <input name="description" type="text" class="form-control" id="description" value="{{description}}">
                </div>
                <div class="form-group">
                    <label for="gender-field">Género</label>
                    <input class="custom-select custom-select-lg mb-3" list="gender-list" id="gender-field" value="{{description}}">
                
                    <datalist id="gender-list">
                        {{#each user}}
                        <option value="{{gender}}">
                        {{/each}}
                    </datalist>
                </div>
              
                <label for="">Habilidades</label>
                <div class="form-group " data-toggle="buttons">
                    <label class="btn btn-default">
                        <input type="checkbox" name="skills">
                        {{#each user}}
                        {{skills}}
                        {{/each}}
                    </label>
                </div>              

                <div class="form-group">
                    <label for="experiences">Experiencia</label>
                    <input name="experiences" type="text" class="form-control" id="experiences">
                </div>

                <label for="">Personalidad</label>                
                <div class="form-group " data-toggle="buttons">
                    <label class="btn btn-default">
                        <input type="checkbox" name="personality">
                        {{#each user}}
                        {{personality}}
                        {{/each}}
                    </label>
                </div>
              
                <label for="">Idioma</label>
                <div class="form-group " data-toggle="buttons">                    
                    <label class="btn btn-default">
                        <input type="checkbox" name="languages">
                        {{#each user}}
                        {{languages}}
                        {{/each}}
                    </label>
                </div>

                {{!-- <div class="form-group">                    
                    <div class="form-check">
                        <input type="button" class="btn btn-default inline" name="extra" value="Garden">
                        <input type="button" class="btn btn-default inline" name="extra" value="Balcony">
                        <input type="button" class="btn btn-default inline" name="extra" value="Parking">
                    </div>
                </div> --}}
               
                {{#if errorMsg}}
                <p style="margin-top: 10px;background: red; color: white; text-align: center; padding: 10px">
                    {{errorMsg}}</p>
                {{/if}}
              

                <button type="submit" class="btn btn-dark">Guardar</button>
                <a href="/user" class="btn btn-dark">Volver</a>

            </form>
        </div>

    </div>
</div>