<div class="container-fluid">

    <div class="row total">

        <div class="col-md-7 mx-auto ">                  
  
            <!------------ Profile widget ------------>
            <div class="shadow overflow-hidden profile-container">
                <div class="px-4 pt-0 pb-4 cover mb-4">
              
                    <div class="media my-auto profile-head">

                        <div class="profile profile-image-container">
                            <img src={{user.image}} alt="profile-photo" width="130" class="rounded mb-2 img-thumbnail center-block">
                        </div>
                                               
                        <div class="media-body mb-5">
                            <h5 class="mt-4  ml-4 font-italic" style="text-transform: capitalize; font-weight: 300; color:rgba(255, 255, 255, 0.774)">{{user.name}}</h5>
                            <hr style="border-top: 0.5px solid rgba(255, 255, 255, 0.397);">                    
                        </div>
                    </div>
                </div>

                <div class="bg-white main-container">

                    <!-- Other -->
                    <div class="bg-white p-4 d-flex justify-content-end text-center">
                        <ul class="list-inline mb-0">
                            <li class="list-inline-item">
                                <h5 class="font-weight-bold mb-0 d-block"></h5><small class="text-muted"> <i
                                        class="fas fa-image mr-1"></i></small>
                            </li>
                            <li class="list-inline-item">
                                <h5 class="font-weight-bold mb-0 d-block"></h5><small class="text-muted"> <i
                                        class="fas fa-user mr-1"></i></small>
                            </li>
                            <li class="list-inline-item">
                                <h5 class="font-weight-bold mb-0 d-block"></h5><small class="text-muted"> <i
                                        class="fas fa-user mr-1"></i></small>
                            </li>
                        </ul>
                    </div>
                    
                    <!-- Description -->
                    <div class="px-4 py-3">
                        <h6 class="mb-1">Descripción</h6>
                        <div class="p-4 rounded shadow-sm bg-light">
                            <p class="font-italic mb-0">{{user.description}}</p>
                        </div>
                    </div>
                    
                    <!-- Skills -->
                    <div class="px-4 py-3">
                        <h6 class="mb-1">Habilidades</h6>
                        <div class="p-4 rounded shadow-sm bg-light">
                            <p class="font-italic mb-0">{{user.skills}}</p>
                        </div>
                    </div>
                    
                    <!-- Experience -->
                    <div class="px-4 py-3">
                        <h6 class="mb-1">Experiencia</h6>
                        <div class="p-4 rounded shadow-sm bg-light">
                            <p class="font-italic mb-0">{{user.experiences}}</p>
                        </div>
                    </div>
                    
                    <!-- Personality -->
                    <div class="px-4 py-3">
                        <h6 class="mb-1">Personalidad</h6>
                        <div class="p-4 rounded shadow-sm bg-light">
                            <p class="font-italic mb-0">{{user.personality}}</p>
                        </div>
                    </div>
                    
                    <!-- Language -->
                    <div class="px-4 py-3">
                        <h6 class="mb-1">Idiomas</h6>
                        <div class="p-4 rounded shadow-sm bg-light">
                            <p class="font-italic mb-0">{{user.languages}}</p>
                        </div>
                    </div>

                    <!-- Products -->
                    <div class="px-4 py-3">
                        <h5 class="mb-1">Productos</h5>
                    </div>

                    <div class="px-4 py-3">
                    <div class="d-flex flex-row flex-wrap mb-4">
                    
                        {{#each products}}
                    
                        <div class="col-md-6 mb-4 hover-overlay">
                            <a href="/productos/detalles/{{_id}}"><div class="hover hover-1 text-white rounded" style="width: 100%;">
                    
                                <img src={{image}} alt="" style="filter:opacity(70%);"></a>
                                              
                    
                                <div class="hover-1-content px-5 py-4">
                                    <h3 class="hover-1-description mb-0">{{title}}</h3>
                                    <p class="hover-1-description mb-0">{{description}}</p>
                                </div>
                    
                            </div>
                        </div>
                    
                        {{/each}}
                    
                    </div>

                    <!--------------- Create, edit button --------------->
                    <div>                     
                        <a href="/productos/nuevo" class="btn-block btn-color text-center" style="display:block">Crear nuevo producto</a>
                    
                        <a href="/usuario/editar?id={{user.id}}" class="btn btn-white-product form-control">Editar perfil</a>

                        <a href="/auth/cerrar-sesion" class="btn btn-white-product form-control">Cerrar sesión</a>                        
                    </div>
                    </div>

                      
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>
