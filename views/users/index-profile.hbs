<div class="container-fluid">

    <div class="row"> <!--py-5 px-4-->
        <div class="col-md-12 mx-auto">
            <!-- Profile widget -->
            <div class="bg-white shadow rounded overflow-hidden">
                <div class="px-4 pt-0 pb-4 cover">
                    <div class="media align-items-end profile-head">
                        <div class="profile mr-3"><img
                                src={{user.image}}
                                alt="profile-photo" width="130" class="rounded mb-2 img-thumbnail">
                                <a href="/user/edit?id={{user.id}}" class="btn btn-outline-dark btn-sm btn-block">Edit profile</a></div>
                        <div class="media-body mb-5 text-white">
                            <h4 class="mt-2 mb-2">{{user.name}}</h4>
                            <h6 class="mt-2 mb-2">@{{user.username}}</h6>
                            <p class="small mb-4"> <i class="fas fa-map-marker-alt mr-2">{{user.birthday}}</i></p>
                        </div>
                    </div>
                </div>
                <!-- Other -->
                <div class="bg-light p-4 d-flex justify-content-end text-center">
                    <ul class="list-inline mb-0">
                        <li class="list-inline-item">
                            <h5 class="font-weight-bold mb-0 d-block"></h5><small class="text-muted"> <i
                                    class="fas fa-image mr-1"></i></small>
                        </li>
                        <li class="list-inline-item">
                            <h5 class="font-weight-bold mb-0 d-block"></h5><small class="text-muted"> <i
                                    class="fas fa-user mr-1"></i></small>
                        </li>
                        <li class="list-inline-item">
                            <h5 class="font-weight-bold mb-0 d-block"></h5><small class="text-muted"> <i
                                    class="fas fa-user mr-1"></i></small>
                        </li>
                    </ul>
                </div>
                <!-- Description -->
                <div class="px-4 py-3">
                    <h5 class="mb-0">Descripci√≥n</h5>
                    <div class="p-4 rounded shadow-sm bg-light">
                        <p class="font-italic mb-0">{{user.description}}</p>                        
                    </div>
                </div>
                <!-- Skills -->
                <div class="px-4 py-3">
                    <h5 class="mb-0">Habilidades</h5>
                    <div class="p-4 rounded shadow-sm bg-light">
                        <p class="font-italic mb-0">{{user.skills}}</p>
                    </div>
                </div>
                <!-- Experience -->
                <div class="px-4 py-3">
                    <h5 class="mb-0">Experiencia</h5>
                    <div class="p-4 rounded shadow-sm bg-light">
                        <p class="font-italic mb-0">{{user.experiences}}</p>
                    </div>
                </div>
                <!-- Personality -->
                <div class="px-4 py-3">
                    <h5 class="mb-0">Personalidad</h5>
                    <div class="p-4 rounded shadow-sm bg-light">
                        <p class="font-italic mb-0">{{user.personality}}</p>
                    </div>
                </div>
                <!-- Language -->
                <div class="px-4 py-3">
                    <h5 class="mb-0">Idiomas</h5>
                    <div class="p-4 rounded shadow-sm bg-light">
                        <p class="font-italic mb-0">{{user.languages}}</p>
                    </div>
                </div>                
                <!-- Products -->
                <div class="py-4 px-4">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <h5 class="mb-0">Productos</h5><a href="#" class="btn btn-link text-muted">Mostrar Todos</a>
                    </div>
                    <div class="row">

                        {{#each allProducts}}     
                        <h4>{{title}}</h4>                   
                        <div class="col-lg-6 mb-2 pr-lg-1"><img
                                src={{image}}
                                alt="" class="img-fluid rounded shadow-sm">
                        </div>
                        {{/each}}
                     
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
