                    </div>
                </div>

                <!-- Language -->
                <div class="px-4 py-3">
                    <h5 class="mb-0">Idiomas</h5>
                    <div class="p-4 rounded shadow-sm bg-light">
                        <p class="font-italic mb-0">{{user.languages}}</p>
                    </div>
                </div>

                <!-- Products -->
                <div class="py-4 px-4">
                    <div class="d-flex align-itegms-center justify-content-between mb-3">
                        <h5 class="mb-0">Productos</h5>
                        <br>
                        {{#each products}}
                        <h6>{{title}}</h6>
                        <div class="col-lg-6 mb-2 pr-lg-1">
                            <p>{{description}}</p>
                            <img src={{image}} alt="" class="img-fluid rounded shadow-sm">
                        </div>
                        {{/each}}
                    </div>

