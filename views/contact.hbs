<div class="container">
    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Enviar un email</h1>
            <hr>
            <form method="POST" action="/contacto">
                <div class='form-group'>
                    <label for='to'>Destinatario</label>
                    <input name='email' type='email' class='form-control' id='to'>
                </div>
                <div class='form-group'>
                    <label for='subject'>Asunto</label>
                    <input name='subject' type='text' class='form-control' id='subject'>
                </div>
                <div class='form-group'>
                    <label for='message'>Mensaje</label>
                    <textarea class="form-control" name="message" id="message" rows="3"></textarea>
                </div>
                <button type='submit' class='btn btn-dark btn-block'>Enviar email</button>

                {{#if successMsg}}
                <p class="btn btn-red form-control">{{successMsg}}</p>
                {{/if}}
            </form>

        </div>

    </div>
</div>